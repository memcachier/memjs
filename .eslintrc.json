{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": 0
    },
    "globals": {
        "Promise": "readonly"
    },
    "env": {
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "es6": true,
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended"
}
